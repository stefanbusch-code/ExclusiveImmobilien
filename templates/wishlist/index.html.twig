{% extends 'base.html.twig' %}

{% block title %}Hello WishlistController!{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1>Meine Merkliste</h1>
            {% if wishlist is not empty %}
                <ul>
                    {% for item in wishlist %}
                    <li>
                        {{ item.property.propertyTitle }}
                        <a href="{{ path('app_wishlist_delete', {id: item.id}) }}">Entfernen</a>
                    </li>
                    {% endfor %}
                </ul>
            {% else %}
            <p>Deine Merkliste ist leer!</p>
            {% endif %}
    </div>
{% endblock %}
