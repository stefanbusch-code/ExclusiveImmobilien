{% extends 'base.html.twig' %}


{% block body %}


    <div class="container" style="margin-top: 100px;">

        <form method="post" >
            {% if error and not app.user%}
                <div class="alert alert-danger">Unbekannter Kunde</div>
            {% elseif app.user %}
                <div class="mb-3">
                    Du bist angemeldet als {{ app.user.userIdentifier }}, <a href="{{ path('app_customer_logout') }}">Logout</a>
                </div>
            {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Bitte anmelden</h1>
        <label for="inputCustomername">Name</label>
        <input type="text" value="{{ last_username }}" name="customername" id="inputCustomername" class="form-control" autocomplete="username" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> An mich erinnern
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Anmelden
        </button>

        </form>

    </div>


{% endblock %}
