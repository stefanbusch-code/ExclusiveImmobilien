{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Unbekannter Mitarbeiter</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Du bist angemeldet als {{ app.user.userIdentifier }}, <a href="{{ path('app_employeelogout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container" style="margin-top: 100px;">

        <h1 class="h3 mb-3 font-weight-normal">Bitte anmelden</h1>
        <label for="inputEmployeename">Mitarbeitername</label>
        <input type="text" value="{{ last_username }}" name="employeename" id="inputEmployeename" class="form-control" autocomplete="username" required autofocus>
        <label for="inputPassword">Passwort</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> An mich erinnern
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Anmelden
        </button>
    </div>
</form>
{% endblock %}
