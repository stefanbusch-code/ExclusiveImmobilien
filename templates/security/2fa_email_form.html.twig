{% extends 'base.html.twig' %}

{% block title %}Email-Verifizierung | Exclusive Immobilien{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-bg-dark">
                    <div class="card-header bg-primary text-white">
                        <h2>Email-Verifizierung</h2>
                    </div>
                    <div class="card-body">
                        {% if authenticationError %}
                            <div class="alert alert-danger">{{ authenticationError|trans }}</div>
                        {% endif %}


                        <p class="mb-4">Wir haben einen 6-stelligen Code an <strong>{{ app.user.email }}</strong> gesendet.</p>

                        <form method="post">

                            <div class="form-group mb-3">
                                <label for="_auth_code" class="form-label">Best√§tigungscode:</label>
                                <input type="text" id="_auth_code" name="_auth_code"
                                       class="form-control form-control-lg"
                                       autocomplete="one-time-code"
                                       inputmode="numeric"
                                       pattern="[0-9]*"
                                       autofocus>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Verifizieren
                                </button>
                                <a href="{{ logoutPath }}" class="btn btn-link">
                                    Abbrechen
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}