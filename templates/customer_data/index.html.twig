{% block body %}
    <div class="container" style="margin-top: 100px;">
    <h1>Meine Daten</h1>
        <br>
        <div class="container text-center">
            <div class="row">
                <div class="col">
                    email
                </div>
                <div class="col">
                    {{ email }}
                </div>
            </div>
        </div>
        <br>
        <div class="container overflow-hidden text-center">
            <div class="row gx-5">
                <div class="col">
                    <div class="p-3">email</div>
                </div>
                <div class="col">
                    <div class="p-3">{{ email }}</div>
