                </tr>
                <tr>
                    <th scope="row">Stra√üe: </th>
                    <td>{{ customer.street }}</td>
                </tr>
                <tr>
                    <th scope="row">Hausnummer: </th>
                    <td>{{ customer.streetnumber }}</td>
                </tr>
                <tr>
                    <th scope="row">Postleitzahl: </th>
                    <td>{{ customer.zipcode }}</td>
                </tr>
                <tr>
                    <th scope="row">Ort: </th>
                    <td>{{ customer.city }}</td>
                </tr>
                <tr>
                    <th scope="row">Bundesland: </th>
                    <td>{{ customer.state }}</td>
                </tr>
                <tr>
                    <th scope="row">Land: </th>
                    <td>{{ customer.country }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
