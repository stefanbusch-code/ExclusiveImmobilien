{% extends 'base.html.twig' %}

{% block title %}Home | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1 class="d-inline me-3">Exclusive Immobilien zum Wohlf√ºhlen</h1>
        <div class="row mt-5">

        </div>
            <div class="col-12 col-md-8 ps-5">
                <h2 class="mb-4">Ein paar Exclusive Immobilien:</h2>
                {% for property in properties %}
                <div class="property-list">
                    <div class="flex-shrink-0">
                        <img src="{{ asset('bilder/' ~ property.bild) }}">
                    </div>
                    <div class="d-flex flex-column mb-3">
                        <div class="p-2">
                            <span class="property-details">{{ property.propertyTitle }}</span>
                        </div>
                        <div class="p-2">{{ property.propertyDiscription }}</div>
                        <button type="button" class="btn btn-success"  style="width: 600px;"><a href="{{ path('app_create_property.show',{id: property.id}) }}">Details</a></button>
                    </div>
                    <br>
                </div>
                {% endfor %}
                <br>
                <a href="{{ path('app_house_all') }}" type="button" class="btn btn-success text-white">Alle Immobilien</a>
            </div>

        </div>
    </div>

{% endblock %}
